Screen {
    height: 100%;
    width: 100%;
    # box-sizing: content-box;
    # layers: below above;
    layout: horizontal;
}

DiffSlice{
    # display: none;
    # layer: above;
    content-align: center top;
    overflow: auto;
    # height: auto;
    width: 100%;
    border: round white;
}

SetDiff{
    # display: none;
    # layer: below;
    content-align: center top;
    overflow: scroll;
    # height: auto;
    width: 100%;
    opacity: 50%;
}

SideView, CodeView {
    height: auto; 
    text-align: left;
    width: auto;
    overflow: hidden;
}

VerticalGroup{
    align: center middle;
    height: 100%;
    width: 50%;
    overflow: auto;
}

#scrollview1, #scrollview2{
    layout: vertical;
    align: center top; 
    height: 50%;
    width: 100%;
    overflow: scroll;
}

#scrollview3 {
    align: center middle; 
    height: 100%;
    width: 50%;
    overflow: auto;
}